export PATH=$HOME/bin:/usr/local/bin:{{ .chezmoi.homeDir }}/.cargo/bin/:{{ .chezmoi.homeDir }}/.local/bin:$PATH
export ZSH="$HOME/.oh-my-zsh"
export EDITOR="nvim"

ZSH_THEME="robbyrussell"

plugins=(
    archlinux 
    git 
    ubuntu
    zsh-autosuggestions
    cp
    fancy-ctrl-z
    zsh-syntax-highlighting
    pip
    # vi-mode
    )

source $ZSH/oh-my-zsh.sh

# autojump :
source /usr/share/autojump/autojump.zsh
# zoxide (better autojump)
eval "$(zoxide init zsh)"

v() {
    choice=$(fd --type f --hidden --exclude .git --size -100k | 
        fzf-tmux -p 80%,80% --reverse -q "$*" -1 -0 --preview='bat --color=always --plain {}' --preview-window=down --scheme=history)
    if [ -n "$choice" ]; then
        nvim $choice
    fi
}

alias neovide="neovide --multigrid"
alias clone="alacritty -e zsh -c \"cd \$(pwd); zsh -i\"&!"
neovide-tweaked () {
    (neovide "$@" --nofork && clone)&!;exit
}
#alias nvim=neovide-tweaked
alias vim=nvim
alias vi=vim
alias hx=helix
alias htop=btop
alias top=btop
alias ls=exa
alias tree="exa --tree"
alias make="make -j"
alias poly="./.apps/PolyMC-{{ .chezmoi.kernel.ostype }}-1.4.3-x86_64.AppImage"
alias gupd="git {{ .chezmoi.command }} .; git commit -m \"update\"; git push"
alias bell="tput bel"
alias ll="ls -alh"

